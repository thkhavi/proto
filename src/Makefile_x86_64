CXXFLAGS := -I/usr/include/mysql -I/usr/local/include/mysql++
LDFLAGS := -L/usr/local/lib -L/usr/lib/x86_64-linux-gnu
LDLIBS := -lmysqlpp -lmysqlclient
EXECUTABLE := proto

all: $(EXECUTABLE)

proto: proto.o sample.o site.o tag.o stacksDB.o
	g++ proto.o sample.o site.o tag.o stacksDB.o -o $(EXECUTABLE) $(CXXFLAGS) $(LDFLAGS) $(LDLIBS)

proto.o: proto.cpp
	g++ -c proto.cpp $(CXXFLAGS) $(LDFLAGS) $(LDLIBS)

stacksDB.o: stacksDB.cpp
	g++ -c stacksDB.cpp $(CXXFLAGS) $(LDFLAGS) $(LDLIBS)

tag.o: tag.cpp
	g++ -c tag.cpp $(CXXFLAGS) $(LDFLAGS) $(LDLIBS)

site.o: site.cpp
	g++ -c site.cpp $(CXXFLAGS) $(LDFLAGS) $(LDLIBS)

sample.o: sample.cpp
	g++ -c sample.cpp $(CXXFLAGS) $(LDFLAGS) $(LDLIBS)

clean:
	rm -rf *o $(EXECUTABLE)
